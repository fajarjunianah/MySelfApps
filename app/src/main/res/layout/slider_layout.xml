<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/_5sdp"
    android:background="@color/purple"
    android:paddingVertical="@dimen/_115sdp">

    <ImageView
        android:id="@+id/iv_onboarding"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:contentDescription="@string/title1"
        android:src="@drawable/ob1"
        app:layout_constraintBottom_toTopOf="@id/tv_judul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_judul"
        style="@style/TextWhiteRocknRollBold18Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_15sdp"
        android:text="@string/title1"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/tv_deskripsi" />

    <TextView
        android:id="@+id/tv_deskripsi"
        style="@style/TextWhiteRocknRoll12Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description1"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>